<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPizzaMenuFragment"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/button_add_topping"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_post_add_24"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topping_table"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/topping_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Topping"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/topping_price"
                android:layout_width="100dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="15sp"
                android:gravity="left|center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="left|center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView

                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="left|center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

        </TableRow>
        <View
            android:id="@+id/divider_topping"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
    </TableLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview_toppings"
        />


</LinearLayout>